<?xml version="1.0" encoding="utf-8"?>
<configuration>
    <property>
        <name>MsgBatchManager.msgSource</name>
        <value>KafkaMsgSource</value>
    </property>
    <property>
        <name>MsgBatchManager.msgSink</name>
        <value>KafkaMsgSink</value>
    </property>
    <property>
        <name>MsgBatchManager.processorChain</name>
        <value>GenericProcessorChain</value>
    </property>
    <property>
        <name>MsgBatchManager.topicNameMapper</name>
        <value>GenericTopicMapper</value>
    </property>
    <property>
        <name>MsgBatchManager.recoverSourceOffsetFromSink</name>
        <value>1</value>
    </property>
    <!-- KafkaMsgSource -->
    <property>
        <name>KafkaMsgSource.class</name>
        <value>cn.whaley.bi.logsys.forest.KafkaMsgSource</value>
    </property>
    <property>
        <name>KafkaMsgSource.topics</name>
        <value>pre-boikgpokn.*</value>
    </property>
    <property>
        <name>KafkaMsgSource.logPerMsgCount</name>
        <value>200</value>
    </property>
    <property>
        <name>KafkaMsgSource.include</name>
        <value>kafka-consumer.xml,kafka-producer.xml,kafka.properties</value>
    </property>
    <!-- KafkaMsgSink -->
    <property>
        <name>KafkaMsgSink.class</name>
        <value>cn.whaley.bi.logsys.forest.KafkaMsgSink</value>
    </property>
    <property>
        <name>KafkaMsgSink.include</name>
        <value>kafka-producer.xml,kafka.properties</value>
    </property>
    <!-- GenericProcessorChain -->
    <property>
        <name>GenericProcessorChain.class</name>
        <value>cn.whaley.bi.logsys.forest.GenericProcessorChain</value>
    </property>
    <property>
        <name>GenericProcessorChain.include</name>
        <value>GenericProcessorChain.xml,GenericActionLogPostProcessor.properties</value>
    </property>
    <!-- GenericTopicMapper -->
    <property>
        <name>GenericTopicMapper.class</name>
        <value>cn.whaley.bi.logsys.forest.GenericTopicMapper</value>
    </property>
    <property>
        <name>GenericTopicMapper.errTopicMapper</name>
        <value>DefaultErrorTopicMapper</value>
    </property>
    <property>
        <name>GenericTopicMapper.targetTopicMapper</name>
        <value>ActionLogTargetTopicMapper,DefaultTargetTopicMapper</value>
    </property>
    <property>
        <name>ActionLogTargetTopicMapper.class</name>
        <value>cn.whaley.bi.logsys.forest.actionlog.ActionLogTargetTopicMapper</value>
    </property>
    <property>
        <name>DefaultTargetTopicMapper.class</name>
        <value>cn.whaley.bi.logsys.forest.TopicMapper.DefaultTargetTopicMapper</value>
    </property>
    <property>
        <name>DefaultErrorTopicMapper.class</name>
        <value>cn.whaley.bi.logsys.forest.TopicMapper.DefaultErrorTopicMapper</value>
    </property>

</configuration>